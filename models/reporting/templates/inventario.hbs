<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Reporte de Inventario</title>
  <style>
    body { font-family: sans-serif; font-size: 12px; }
    table { width: 100%; border-collapse: collapse;}
    th, td { border: 1px solid #888; padding: 4px; text-align: right; }
    th { background:#f0f0f0; }
    td.nombre, th.nombre { text-align: left; }
  </style>
</head>
<body>
  <h2>Reporte de Inventario</h2>
  <p>Generado: {{fecha}}</p>

  <table>
    <thead>
      <tr>
        <th class="nombre">Producto</th>
        <th>Código</th>
        <th>Familia</th>
        <th>Proveedor</th>
        <th>Stock</th>
        <th>Costo&nbsp;₡</th>
        <th>Venta&nbsp;₡</th>
        <th>Margen&nbsp;₡</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td class="nombre">{{nombre}}</td>
        <td>{{codigoBarras}}</td>
        <td>{{familia}}</td>
        <td>{{proveedor}}</td>
        <td>{{existencias}}</td>
        <td>{{costoUnitario}}</td>
        <td>{{precioVenta}}</td>
        <td>{{margenUnitario}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
